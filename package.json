{
  "name": "one-wallet",
  "description": "A Cli wallet for EVM chains, built for AI, agents, scripts, and automation.",
  "version": "1.0.0",
  "author": "jerry",
  "bin": {
    "one-wallet": "./bin/run.js"
  },
  "bugs": "https://github.com/viyozc/one-wallet/issues",
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "chalk": "^5.4.1",
    "ethers": "^6.16.0",
    "figlet": "^1.8.0",
    "inquirer": "^8.2.6",
    "nanospinner": "^1.1.0",
    "viem": "^2.45.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/inquirer": "^8.2.10",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/viyozc/one-wallet",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "one-wallet",
    "dirname": "one-wallet",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "hooks": {
      "init": "./dist/hooks/init.js",
      "prerun": "./dist/hooks/prerun.js"
    },
    "topics": {
      "provider": {
        "description": "Manage RPC provider: list presets, set mainnet/sepolia/custom URL"
      },
      "wallet": {
        "description": "Wallets: create, import, list, set default; balance, send, call, estimate, tx; sign message/typed-data, verify"
      }
    }
  },
  "repository": "viyozc/one-wallet",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
